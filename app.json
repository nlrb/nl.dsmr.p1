{
    "id": "nl.dsmr.p1",
    "name": {
        "en": "Dutch Smart Meter"
    },
    "version": "0.0.7",
    "compatibility": ">=1.1.0",
    "description": {
        "en": "Read the power and gas values of your Dutch Smart Meter.",
        "nl": "Bekijk stroom and gas data van slimme meter."
    },
    "author": {
        "name": "Ram√≥n Baas"
    },
    "category": "tools",
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "capabilities": {
        "flow_gas": {
            "type": "number",
            "decimals": 1,
            "title": { "en": "Gas flow", "nl": "Gasstroom" },
            "units": { "en": "l/h" },
            "getable": true,
            "setable": false
        }
    },
    "drivers": [
        {
            "id": "dsmr",
            "name": {
                "en": "Smart Meter",
                "nl": "Slimme Meter"
            },
            "class": "sensor",
            "capabilities": [
                "measure_power", 
                "meter_power", 
                "meter_gas",
                "flow_gas"
            ],
            "mobile": {
                "components": [
                    {
                        "id": "sensor",
                        "capabilities": [
                            "measure_power", 
                            "meter_power", 
                            "meter_gas",
                            "flow_gas"
                        ],
                        "options": {
                            "icons": {
                                "flow_gas": "./drivers/sensor/assets/flow_gas.svg"
                            }
                        }
                    }
                ]
            },
            "images": {
                "large": "drivers/dsmr/assets/images/large.png",
                "small": "drivers/dsmr/assets/images/small.png"
            },
            "pair": [
                { "id": "dsmr" }
            ],
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "Network settings",
                        "nl": "Netwerk instellingen"
                    },
                    "children": [
                        {
                            "id": "ip",
                            "type": "text",
                            "label": {
                                "en": "IP address",
                                "nl": "IP adres"
                            },
                            "value": "0.0.0.0"
                        },
                        {
                            "id": "port",
                            "type": "number",
                            "label": {
                                "en": "IP port number",
                                "nl": "IP poort nummer"
                            },
                            "value": 23,
                            "attr": {
                                "min": 0,
                                "max": 65535
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "label": {
                        "en": "Meter information",
                        "nl": "Meter informatie"
                    },
                    "children": [
                        {
                            "id": "name",
                            "type": "label",
                            "label": {
                                "en": "Name",
                                "nl": "Naam"
                            },
                            "value": ""
                        },
                        {
                            "id": "version",
                            "type": "label",
                            "label": {
                                "en": "Version",
                                "nl": "Versie"
                            },
                            "value": ""
                        },
                        {
                            "id": "eid",
                            "type": "label",
                            "label": {
                                "en": "Equipment identifier",
                                "nl": "Meter identificatie"
                            },
                            "value": ""
                        },
                        {
                            "id": "gid",
                            "type": "label",
                            "label": {
                                "en": "Gas equipment identifier",
                                "nl": "Gasmeter identificatie"
                            },
                            "value": ""
                        }
                    ]
                },
                {
                    "type": "group",
                    "label": {
                        "en": "Power producers",
                        "nl": "Stroomproductie"
                    },
                    "children": [
                        {
                            "id": "compensate",
                            "type": "checkbox",
                            "label": {
                                "en": "Compensate for power producers",
                                "nl": "Compenseer voor stroomproductie"
                            },
                            "value": true
                        },
                        {
                            "id": "onTime",
                            "type": "checkbox",
                            "label": {
                                "en": "Use DSMR timestamp for measurement",
                                "nl": "Gebruik slimme meter tijd voor meting"
                            },
                            "value": true
                        },
                        {
                            "id": "timeOffset",
                            "type": "number",
                            "label": {
                                "en": "Time offset to add to DSMR time (ms)",
                                "nl": "Extra tijd toevoegen aan DSMR tijd (ms)"
                            },
                            "value": 1000,
                            "attr": {
                                "min": -4000,
                                "max": 4000
                            }
                        }
                    ]
                }
            ]
        },
        {
            "id": "sensor",
            "name": {
                "en": "Meter Values",
                "nl": "Meetwaarden"
            },
            "class": "sensor",
            "capabilities": [ "measure_power" ],
            "images": {
                "large": "drivers/sensor/assets/images/large.png",
                "small": "drivers/sensor/assets/images/small.png"
            },
            "pair": [
                { "id": "select" },
                { "id": "list_devices", "template": "list_devices", "navigation": { "next": "add_devices" } },
                { "id": "add_devices", "template": "add_devices" }
            ]
        }
    ],
    "dependencies": [
        { "dsmr-api": "*" },
        { "node-crc": "crc" },
        { "node-dsmr-parser": "parser" }
    ],
    "permissions": [
        "homey:app:org.sunspec"
    ]
}
